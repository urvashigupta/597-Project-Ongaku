<div class="page-header">
    <div class="info">
        <h2>Enjoy the music!</h2>
    </div>

     <%= form_for :home_search_songs, :url => {:action => "search"} do |f| %>
        <p>
          <%= f.label :find_songs %>
          <%= f.text_field :find_songs %>
        </p>

        <%= f.submit :"Search" %>
        <!-- <br/> <br/> -->
        <input type="reset" value="Clear">
        <br/> <br/>
        <%= link_to "Logout?", logout_index_path %>
        <%end%>
</div>

<div class="grid-container">
    <div id="slickgrid"></div>
</div>
<br/>
<table>
  <tr>
    <th>Title</th>
    <th>Artist Name</th>
    <th>Duration</th>
    <th>Year</th>
  </tr>
  <% @songs.each do |track| %>
  <tr>
    <td><%= track.title %></td>
    <td><%= track.artist_name %></td>
    <td><%= ((track.duration.to_i/60).to_s + ":" + ((track.duration.to_i%60).to_s)) %></td>
    <td><%= track.year %></td>
  </tr>
  <%end%>
</table>
<br/>
<br/>
<br/>
<br/>
<div style="position:relative;width:800px;height:25px;overflow:hidden;">
  <div style="position:absolute;top:-276px;left:-5px">
    <iframe width="800" height="300" 
      src="https://www.youtube.com/embed/I-SqFmhBUp4">
    </iframe>
  </div>
</div>
