<center>
  <div class="page-header">
    <div class="info">
      <h2>Change your password here!</h2>
    </div>
  </div>

  <%= form_for :user_settings, :url => {:action => "changepassword"} do |f| %>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :current_password %>
  </p>
  <p>
    <%= f.label :new_password %><br />
    <%= f.password_field :new_password %>
  </p>
  <p>
    <%= f.label :confirm_password %><br />
    <%= f.password_field :confirm_password %>
  </p>
  <p>
    <%= link_to "Save Password", home_index_path %><br/>
    <%= link_to "Back", home_index_path %>
  </p>
  <% end %>
</center>